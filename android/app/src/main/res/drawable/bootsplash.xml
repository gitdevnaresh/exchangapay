<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fullscreen background -->
    <item>
        <bitmap android:src="@drawable/login_bg" android:gravity="fill" />
    </item>

    <!-- Centered logo -->
    <item android:gravity="center">
        <bitmap android:src="@drawable/exchanga_logo" android:gravity="center" android:tileMode="disabled" />
    </item>

    <!-- Centered text below logo -->
    <item android:gravity="center" android:top="120dp">        <!-- adjust this value for spacing -->
        <bitmap android:src="@drawable/exchangapaylogo" android:gravity="center" android:tileMode="disabled" />
    </item>

</layer-list>
